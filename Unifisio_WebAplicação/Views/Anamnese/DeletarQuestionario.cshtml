@model Unifisio_WebAplicação.Models.Anamnese

@{
    ViewBag.Title = "Deletar o Questionário";
    Layout = "~/Views/Shared/_LayoutLogado.cshtml";
}
<br />
<div class=" text-center">
    <h3>Tem certeza que deseja excluir o questionário?</h3>
</div>
<div>
    <h4> Nome do Questionário</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.titulo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.titulo)
        </dd>

    </dl>

    @using (Html.BeginForm("DeletarQuestionario","Anamnese",FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-danger" /> || @Html.ActionLink("Volta para a lista", "NovoTitulo")
        </div>
    }
</div>
