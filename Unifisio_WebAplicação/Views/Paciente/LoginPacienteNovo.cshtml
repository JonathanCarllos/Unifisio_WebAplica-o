@model Unifisio_WebAplicação.Models.Paciente

@{
    ViewBag.Title = "LoginPacienteNovo";
    Layout = "~/Views/Shared/_LayoutLogado.cshtml";
}
<br />
<div class="text-center">
    <h2>Email e Senha</h2>
</div>

@using (Html.BeginForm("SalvarSenha", "Paciente", FormMethod.Post))
{
    @Html.AntiForgeryToken()


    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <div class="row">
            <div class="col-md-6">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-12" })
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control col-12" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-6">
                @Html.LabelFor(model => model.Senha, htmlAttributes: new { @class = "control-label col-12" })
                @Html.PasswordFor(model => model.Senha, htmlAttributes: new { @class = "form-control col-12" })
                @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-primary" /> || @Html.ActionLink("Volta para a lista", "ListaUsuario")
            </div>
        </div>
    </div>
}