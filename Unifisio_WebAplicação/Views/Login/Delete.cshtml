@model Unifisio_WebAplicação.Models.Usuario

@{
    ViewBag.Title = "Excluir Usuário";
    Layout = "~/Views/Shared/_LayoutLogado.cshtml";
}
<br />
<div class="text-center">
    <h2>Excluir</h2>
    <h3>Tem certeza de que deseja excluir?</h3>
</div>

<div>
    <h4>Usuário</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Senha)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Senha)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Tipousuario)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tipousuario)
        </dd>

    </dl>

    @using (Html.BeginForm("Deletar", "Login", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-danger" /> |
            @Html.ActionLink("Volta para a lista", "ListaUsuarios")
        </div>
    }
</div>
