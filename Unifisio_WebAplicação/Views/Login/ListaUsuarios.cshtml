@model IEnumerable<Unifisio_WebAplicação.Models.Usuario>

@{
    ViewBag.Title = "Usuários";
    Layout = "~/Views/Shared/_LayoutLogado.cshtml";
}
<br />
<div class="text-center">
    <h2>Lista de Usuários</h2>
</div>


<p>
    @Html.ActionLink("Clique aqui para adicionar um novo usuário", "Novo", "Login", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td align="right">
                @Html.ActionLink("Atualizar", "Editar", new { id = item.Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
